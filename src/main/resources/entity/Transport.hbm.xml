<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
    <class name="application.entity.Transport" table="transports" catalog="netcracker_infosystem_db">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>

        <property name="kind" column="kind">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">application.entity.TransportKinds</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <property name="name" type="string">
            <column name="name"/>
        </property>

        <property name="capacity" type="java.lang.Long">
            <column name="capacity"/>
        </property>

        <set name="routes" cascade="all">
            <key column="id" />
            <one-to-many class="application.entity.Route" />
        </set>

    </class>
</hibernate-mapping>